<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usask.hci.arlss">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.usask.hci.arlss.MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".MainActivityOrder">
        </activity>
        <activity android:name="com.usask.hci.arlss.MainActivityOrder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.usask.hci.arlss.Rlss"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name="com.usask.hci.arlss.SlideBar"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name="com.usask.hci.arlss.InputBox"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>
</manifest>